{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "importHelpers": true,
    "sourceMap": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*/": [
        "node_modules/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
